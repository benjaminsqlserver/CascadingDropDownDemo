@page "/"
@page "/local-goverment-areas"
@layout MainLayout
@inherits CascadingDropdownDemo.Pages.LocalGovermentAreasComponent

@using Radzen
@using Radzen.Blazor
@using CascadingDropdownDemo.Models.ConData
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Local Goverment Areas">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" AllowSorting="true" Data="@getLocalGovermentAreasResult" TItem="CascadingDropdownDemo.Models.ConData.LocalGovermentArea" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenGridColumn TItem="CascadingDropdownDemo.Models.ConData.LocalGovermentArea" Property="LgaID" Title="Lga ID">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CascadingDropdownDemo.Models.ConData.LocalGovermentArea" Property="LgaName" Title="Lga Name">
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CascadingDropdownDemo.Models.ConData.LocalGovermentArea" Property="StateID" SortProperty="State.StateName" FilterProperty="State.StateName" Title="State">
              <Template Context="data">
              @(data.State?.StateName)
              </Template>
            </RadzenGridColumn>
            <RadzenGridColumn TItem="CascadingDropdownDemo.Models.ConData.LocalGovermentArea" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
              <Template Context="cascadingDropdownDemoModelsConDataLocalGovermentArea">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, cascadingDropdownDemoModelsConDataLocalGovermentArea))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenGridColumn>
          </Columns>
        </RadzenGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
